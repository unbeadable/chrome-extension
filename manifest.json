{
  "manifest_version": 2,
  "name": "unbeadable.",
  "description": "Extension written in TypeScript",
  "version": "2",
  "author": "unbeadables",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.amazon.de/*"
      ],
      "js": ["build/dist/main.js"],
      "run_at": "document_idle"
    }
  ],
  "permissions": [
    "activeTab",
    "declarativeContent"
  ]
}